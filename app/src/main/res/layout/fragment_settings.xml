<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.main.settings.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/stp" />

        <TextView
            android:id="@+id/sync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_sync_24"
            android:drawablePadding="16dp"
            android:padding="12dp"
            android:text="Sync"
            android:textSize="20sp"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:alpha=".6"
            android:background="@color/colorSecondary" /> <TextView
            android:id="@+id/feedBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_feedback_24"
            android:drawablePadding="16dp"
            android:padding="12dp"
            android:text="Feedback"
            android:textSize="20sp"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:alpha=".6"
            android:background="@color/colorSecondary" />

        <TextView
            android:id="@+id/deleteAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_delete_24"
            android:drawablePadding="16dp"
            android:padding="12dp"
            android:text="Delete account"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:alpha="0.6"
            android:background="@color/colorSecondary" />

        <TextView
            android:id="@+id/logOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_login_24"
            android:drawablePadding="16dp"
            android:padding="12dp"
            android:text="Log out"
            android:textSize="20sp" />
    </LinearLayout>


</ScrollView>