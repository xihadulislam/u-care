<?xml version="1.0" encoding="utf-8"?><ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    tools:context=".screens.main.emergencyContact.EmergencyContactFragment">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical"        android:padding="8dp">        <androidx.cardview.widget.CardView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_margin="5dp"            android:elevation="4dp"            app:cardCornerRadius="6dp">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="horizontal">                <TextView                    android:layout_width="5dp"                    android:layout_height="match_parent"                    android:background="@color/colorSecondary" />                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_margin="5dp"                    android:weightSum="7">                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_weight="1"                        android:orientation="vertical">                        <TextView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:paddingLeft="10dp"                            android:paddingTop="10dp"                            android:text="National emergency hotline number"                            android:textColor="@color/colorPrimary"                            android:textSize="18dp" />                        <TextView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:paddingLeft="10dp"                            android:paddingTop="5dp"                            android:text="999"                            android:textColor="#675756"                            android:textSize="14sp" />                    </LinearLayout>                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:layout_weight="6"                        >                        <ImageView                            android:id="@+id/national_ec_iv"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_gravity="center_vertical"                            android:src="@drawable/ic_baseline_call_24" />                    </LinearLayout>                </LinearLayout>            </LinearLayout>        </androidx.cardview.widget.CardView>        <androidx.cardview.widget.CardView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_margin="5dp"            android:elevation="4dp"            app:cardCornerRadius="6dp">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="horizontal">                <TextView                    android:layout_width="5dp"                    android:layout_height="match_parent"                    android:background="@color/colorPrimary" />                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_margin="5dp"                    android:weightSum="7">                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_weight="1"                        android:orientation="vertical">                        <TextView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:paddingLeft="10dp"                            android:paddingTop="10dp"                            android:text="National hotline number"                            android:textColor="@color/colorPrimary"                            android:textSize="18dp" />                        <TextView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:paddingLeft="10dp"                            android:paddingTop="5dp"                            android:text="333"                            android:textColor="#675756"                            android:textSize="14sp" />                    </LinearLayout>                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:layout_weight="6"                        >                        <ImageView                            android:id="@+id/national_hn_iv"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_gravity="center_vertical"                            android:src="@drawable/ic_baseline_call_24" />                    </LinearLayout>                </LinearLayout>            </LinearLayout>        </androidx.cardview.widget.CardView>        <androidx.cardview.widget.CardView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_margin="5dp"            android:elevation="4dp"            app:cardCornerRadius="6dp">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="horizontal">                <TextView                    android:layout_width="5dp"                    android:layout_height="match_parent"                    android:background="@color/colorSecondary" />                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_margin="5dp"                    android:weightSum="7">                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_weight="1"                        android:orientation="vertical">                        <TextView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:paddingLeft="10dp"                            android:paddingTop="10dp"                            android:text="Govt. helpline for women and children"                            android:textColor="@color/colorPrimary"                            android:textSize="18dp" />                        <TextView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:paddingLeft="10dp"                            android:paddingTop="5dp"                            android:text="109"                            android:textColor="#675756"                            android:textSize="14sp" />                    </LinearLayout>                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:layout_weight="6"                        >                        <ImageView                            android:id="@+id/national_wc_iv"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_gravity="center_vertical"                            android:src="@drawable/ic_baseline_call_24" />                    </LinearLayout>                </LinearLayout>            </LinearLayout>        </androidx.cardview.widget.CardView>        <androidx.cardview.widget.CardView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_margin="5dp"            android:elevation="4dp"            app:cardCornerRadius="6dp">            <LinearLayout                android:id="@+id/my_contact_lin"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="horizontal">                <TextView                    android:layout_width="5dp"                    android:layout_height="match_parent"                    android:background="@color/colorPrimary" />                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_margin="5dp"                    android:visibility="visible"                    android:weightSum="7">                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_weight="1"                        android:orientation="vertical">                        <TextView                            android:id="@+id/my_contact_name"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:paddingLeft="10dp"                            android:paddingTop="10dp"                            android:text="my contact"                            android:textColor="@color/colorPrimary"                            android:textSize="18dp"                            android:textStyle="bold" />                        <TextView                            android:id="@+id/my_contact_number"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:paddingLeft="10dp"                            android:paddingTop="5dp"                            android:text="01700000000"                            android:textColor="#675756"                            android:textSize="14sp" />                    </LinearLayout>                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:layout_weight="3"                        >                        <ImageView                            android:id="@+id/my_contact_iv_edit"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_gravity="center_vertical"                            android:src="@drawable/ic_baseline_edit_24" />                    </LinearLayout>                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:layout_weight="3"                        >                        <ImageView                            android:id="@+id/my_contact_iv"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_gravity="center_vertical"                            android:src="@drawable/ic_baseline_call_24" />                    </LinearLayout>                </LinearLayout>            </LinearLayout>        </androidx.cardview.widget.CardView>        <TextView            android:id="@+id/add_myContact_tv"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_margin="10dp"            android:text="Add my emergency contact"            app:drawableStartCompat="@drawable/ic_baseline_add_24" />        <LinearLayout            android:id="@+id/edit_myc_lin"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical"            android:visibility="visible">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="vertical">                <EditText                    android:id="@+id/et_name_my_ec"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginLeft="10dp"                    android:layout_marginRight="10dp"                    android:background="@drawable/edittext_border"                    android:hint="name"                    android:padding="15dp" />                <EditText                    android:id="@+id/et_number_my_cn"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginLeft="10dp"                    android:layout_marginTop="10dp"                    android:layout_marginRight="10dp"                    android:background="@drawable/edittext_border"                    android:hint="number"                    android:inputType="phone"                    android:padding="15dp" />            </LinearLayout>            <Button                android:id="@+id/save_button"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="right"                android:layout_marginTop="5dp"                android:layout_marginRight="10dp"                android:padding="10dp"                android:text="save" />        </LinearLayout>    </LinearLayout></ScrollView>